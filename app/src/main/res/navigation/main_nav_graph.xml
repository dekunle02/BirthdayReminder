<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/birthdayListFragment">

    <fragment
        android:id="@+id/birthdayListFragment"
        android:name="com.adeleke.samad.birthdayreminder.birthdayList.BirthdayListFragment"
        android:label="@string/birthdays"
        tools:layout="@layout/fragment_birthday_list" >
        <action
            android:id="@+id/action_birthdayListFragment_to_birthdayDetail"
            app:destination="@id/birthdayDetail"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/birthdayListFragment" />
    </fragment>
    <fragment
        android:id="@+id/anniversaryListFragment"
        android:name="com.adeleke.samad.birthdayreminder.anniversaryList.AnniversaryListFragment"
        android:label="@string/anniversaries"
        tools:layout="@layout/fragment_anniversary_list" />
    <fragment
        android:id="@+id/birthdayDetail"
        android:name="com.adeleke.samad.birthdayreminder.birthdayDetail.BirthdayDetailFragment"
        android:label="@string/birthday_detail"
        tools:layout="@layout/fragment_birthday_detail" >
        <argument
            android:name="birthdayId"
            app:argType="string"
            android:defaultValue="-1" />
    </fragment>

</navigation>